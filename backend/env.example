# Database Configuration
MONGODB_URI=mongodb://localhost:27017/printer_business

# Server Configuration
PORT=5000
NODE_ENV=development

# Razorpay Configuration (Test Mode)
RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_TEST_KEY_SECRET

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:3000 

# Raspberry Pi Cloudflare Tunnel Discovery
# If set, backend will call `${RASPI_DISCOVERY_URL}/tunnel` to fetch the live public URL
RASPI_DISCOVERY_URL=http://192.168.1.50:4000

# Optional: If backend runs on the Pi itself, you can point directly to cloudflared local API
# CLOUDFLARE_API_URL=http://127.0.0.1:4040/api/tunnels